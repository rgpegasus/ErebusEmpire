$stats = Get-ChildItem -Recurse -Include *.js,*.jsx,*.css | 
    ForEach-Object {
        $content = Get-Content $_.FullName -Raw
        [PSCustomObject]@{
            File       = $_.FullName
            Lines      = ($content -split "`n").Count
            Words      = ($content -split "\s+").Count
            Characters = $content.Length
        }
    }

# RÃ©sumÃ© total
$summary = $stats | Measure-Object -Property Lines, Words, Characters -Sum

# Affichage lisible
Write-Host "ğŸ“Š RÃ©sumÃ© du projet :`n" -ForegroundColor Cyan
Write-Host "ğŸ“„ Fichiers analysÃ©s : $($stats.Count)"
Write-Host "ğŸ“ Lignes totales     : $($summary.Sum[0])"
Write-Host "âœï¸  Mots totaux       : $($summary.Sum[1])"
Write-Host "ğŸ”¡ CaractÃ¨res totaux  : $($summary.Sum[2])"
